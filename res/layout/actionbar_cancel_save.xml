<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:background="@drawable/abs__ab_solid_light_holo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/actionbar_button_cancel"
            style="@style/Widget.Sherlock.Light.ActionBar.Solid"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/actionbar_spacer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <ImageView
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="@android:string/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
            android:id="@+id/actionbar_spacer"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:background="#CCC"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/actionbar_button_save"
            style="@style/Widget.Sherlock.Light.ActionBar.Solid"
            android:padding="16dp"
            android:gravity="right|center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/actionbar_spacer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <ImageView
                android:src="@android:drawable/ic_menu_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="@string/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>
