<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/RelativeLayout1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/slidingmenu_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

    <net.bicou.redmine.widget.RobotoLightTextView
            android:id="@+id/slidingmenu_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/slidingmenu_item_icon"
            android:layout_toRightOf="@+id/slidingmenu_item_icon"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textSize="18sp"/>

</RelativeLayout>
