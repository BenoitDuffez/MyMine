<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_background"
    android:minHeight="60dp"
    android:padding="8dp" >

    <net.bicou.redmine.widget.RobotoTextView
        android:id="@+id/project_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/project_item_updated_on"
        android:padding="8dp"
        android:text="@string/menu_projects"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/project_item_updated_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/project_item_name"
        android:text="@string/project_list_item_updated_on"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/faded_text" />

    <TextView
        android:id="@+id/project_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/project_item_name"
        android:ellipsize="middle"
        android:maxLines="2"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/faded_text" />

</RelativeLayout>