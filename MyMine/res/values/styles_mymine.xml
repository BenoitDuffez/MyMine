<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="IssueTableRow">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="IssueLabel">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">22sp</item>
	</style>
	
	<style name="CertLabel" parent="android:Widget.TextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textIsSelectable">false</item>
	</style>
	
	<style name="CertData" parent="android:Widget.TextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#666666</item>
		<item name="android:typeface">monospace</item>
		<item name="android:gravity">right</item>
		<item name="android:padding">8dp</item>
		<item name="android:background">@color/grey_window_background</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:textIsSelectable">true</item>
	</style>
    
</resources>