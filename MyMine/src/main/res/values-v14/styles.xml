<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyMine.ActionBarStyle"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_mymine</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_mymine</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_mymine</item>
        <item name="android:titleTextStyle">@style/Theme.MyMine.ActionBarStyle.TitleTextStyle</item>
        <item name="android:progressBarStyle">@style/Theme.MyMine.ProgressBar</item>
    </style>

    <style name="Theme.MyMine.ActionBarTabStyle"
           parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mymine</item>
    </style>

    <style name="Theme.MyMine.ActionBarStyle.TitleTextStyle"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

</resources>
