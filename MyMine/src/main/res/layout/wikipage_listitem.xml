<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/issueslist_item_background_indicator"
        android:minHeight="60dp"
        android:padding="8dp">

    <net.bicou.redmine.widget.RobotoTextView
            android:id="@+id/wiki_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/wiki_item_updated_on"
            android:padding="8dp"
            android:text="@string/menu_wiki"
            android:textSize="18sp"/>

    <TextView
            android:id="@+id/wiki_item_updated_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/wiki_item_name"
            android:layout_alignBottom="@id/wiki_item_name"
            android:text="@string/wiki_list_item_updated_on"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/faded_text"/>

</RelativeLayout>
