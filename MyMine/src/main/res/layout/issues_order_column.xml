<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp" >

    <TextView
        android:id="@+id/issues_order_column_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/issues_order_column_direction"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/issues_order_column_direction"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/issues_order_column_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/scrollbar_handle_accelerated_anim2" />

    <ToggleButton
        android:id="@+id/issues_order_column_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/issues_order_column_handle"
        android:layout_alignTop="@+id/issues_order_column_handle"
        android:layout_toLeftOf="@+id/issues_order_column_handle"
        android:textOff="@string/issues_ordering_desc"
        android:textOn="@string/issues_ordering_asc" />

</RelativeLayout>