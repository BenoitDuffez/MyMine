<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:gravity="bottom"
				android:padding="12dp"
				android:layout_gravity="bottom"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

	<LinearLayout
		android:orientation="horizontal"
		android:background="@drawable/crouton_background"
		android:layout_width="match_parent"
		android:layout_height="48dp">

		<TextView
			android:id="@+id/crouton_message"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:textColor="#fff"
			android:textSize="18sp"
			android:layout_marginLeft="16dp"/>

		<View
			android:id="@+id/crouton_separator"
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:layout_margin="12dp"
			android:background="#AAFFFFFF"/>

		<ImageView
			android:id="@+id/crouton_revert"
			android:src="@drawable/ic_menu_revert"
			android:layout_marginRight="8dp"
			android:layout_gravity="center_vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<TextView
			android:id="@+id/crouton_undo"
			android:text="@string/crouton_undo"
			android:layout_marginRight="16dp"
			android:textColor="#fff"
			android:textAllCaps="true"
			android:gravity="center_vertical"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"/>

	</LinearLayout>

</RelativeLayout>
