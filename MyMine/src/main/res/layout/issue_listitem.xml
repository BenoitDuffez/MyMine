<?xml version="1.0" encoding="utf-8"?>
<net.bicou.redmine.widget.IssuesListRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/issue_listitem_height"
    android:background="@drawable/issueslist_item_background"
    android:minHeight="96dp"
    android:padding="8dp">

    <net.bicou.redmine.widget.NoParentPressImageView
        android:id="@+id/issue_item_favorite"
        android:src="@drawable/favorite"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <net.bicou.redmine.widget.RobotoCondensedLightTextView
        android:id="@+id/issue_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:gravity="center_vertical"
        android:text="#13245"
        android:textSize="20sp"/>

    <net.bicou.redmine.widget.RobotoCondensedLightTextView
        android:id="@+id/issue_item_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/issue_item_id"
        android:layout_alignTop="@+id/issue_item_id"
        android:layout_alignBottom="@+id/issue_item_id"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="Title of the issue, which can of course be quite a long text"
        android:textColor="@color/faded_text"
        android:textSize="20sp"/>

    <net.bicou.redmine.widget.RobotoThinTextView
        android:id="@+id/issue_item_description"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/issue_item_id"
        android:layout_above="@+id/issue_item_project_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:layout_marginBottom="2dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="@integer/issues_list_item_nb_lines"
        android:scrollHorizontally="true"
        android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/faded_text"/>

    <net.bicou.redmine.widget.RobotoThinTextView
        android:id="@+id/issue_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/issue_item_fixed_version"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="Status"
        android:padding="4dp"
        android:layout_margin="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/faded_text"/>

    <net.bicou.redmine.widget.RobotoThinTextView
        android:id="@+id/issue_item_fixed_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/issue_item_project_name"
        android:layout_alignParentBottom="true"
        android:padding="4dp"
        android:layout_margin="2dp"
        android:text="0.2.1.4"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/faded_text"/>

    <net.bicou.redmine.widget.RobotoThinTextView
        android:id="@+id/issue_item_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:layout_margin="2dp"
        android:text="Project Name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/issue_listitem_project_background_1"
        android:textColor="@color/issue_listitem_project_textcolor_1"/>

</net.bicou.redmine.widget.IssuesListRelativeLayout>
